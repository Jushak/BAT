<UserControl x:Class="BAT_WPF.Views.Mainmenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="860"
      Background="Khaki">

    <StackPanel Orientation="Vertical">
        <Label FontSize="40" HorizontalAlignment="Center" Content="{DynamicResource ResourceKey=gameTitle}" />
        <Grid>
            <StackPanel Width="300">
                <Button Name="Btn_StartNew" Click="Btn_StartNew_Click" Content="{DynamicResource ResourceKey=btnNewGame}" />
                <Button Name="Btn_LoadGame" Click="Btn_LoadGame_Click" Content="{DynamicResource ResourceKey=btnLoadGame}" />
                <Button Name="Btn_Options" Click="Btn_Options_Click" Content="{DynamicResource ResourceKey=btnOptions}" />
                <Button Name="Btn_Exit" Click="Btn_Exit_Click" Content="{DynamicResource ResourceKey=btnExit}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
