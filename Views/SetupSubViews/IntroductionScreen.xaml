<UserControl x:Class="BAT_WPF.Views.IntroductionScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BAT_WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300"
             Background="Beige">
    <StackPanel Height="500" Width="300" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock TextWrapping="Wrap" Text = "{DynamicResource ResourceKey=txtIntroduction}" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
