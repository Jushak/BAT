<Window x:Class="BAT_WPF.Views.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAT_WPF.Views"
        mc:Ignorable="d"
        Title="GameOptions" Height="200" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Background="Khaki">
        <Button Name="BtnClose" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="BtnClose_Click">X</Button>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="BtnMenu" Margin="20" Click="BtnMenu_Click" >Main menu</Button>
            <Button Name="BtnSave" Margin="20" Click="BtnSave_Click">Save</Button>
            <Button Name="BtnLoad" Margin="20" Click="BtnLoad_Click">Load</Button>
            <Button Name="BtnExit" Margin="20" Click="BtnExit_Click">Exit</Button>
        </StackPanel>
    </Grid>
</Window>
